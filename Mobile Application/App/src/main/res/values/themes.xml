<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base Theme -->
    <style name="Base.Theme.SmartDoor" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Color Customizations -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorSecondary">@color/accent</item>
        <item name="android:colorBackground">@color/light_background</item>
        <item name="colorSurface">@color/card_background</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/dark_text</item>
        <item name="colorOnSurface">@color/primary_text</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="android:statusBarColor">@color/primary_dark</item>
    </style>

    <!-- Main Theme -->
    <style name="Theme.SmartDoor" parent="Base.Theme.SmartDoor" />

    <!-- Splash Screen Theme -->
    <style name="Theme.SmartDoor.Splash" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/door</item> <!-- Background image for splash -->
    </style>
</resources>
